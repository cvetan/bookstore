<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-handler>org.omnifaces.resourcehandler.CombinedResourceHandler</resource-handler>
        
        <locale-config>
            <default-locale>en</default-locale>
            
            <supported-locale>en</supported-locale>
            <supported-locale>sr</supported-locale>
        </locale-config>
        
        <resource-bundle>
            <base-name>com.github.cvetan.bookstore.localization.labels</base-name>
            <var>label</var>
        </resource-bundle>
        
        <resource-bundle>
            <base-name>com.github.cvetan.bookstore.localization.titles</base-name>
            <var>title</var>
        </resource-bundle>
        
        <resource-bundle>
            <base-name>com.github.cvetan.bookstore.localization.messages</base-name>
            <var>message</var>
        </resource-bundle>
        
        <message-bundle>com.github.cvetan.bookstore.localization.validatorMessages</message-bundle>
    </application>
</faces-config>
